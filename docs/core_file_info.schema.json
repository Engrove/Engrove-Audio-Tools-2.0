// docs/core_file_info.schema.json
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Core File Information Database",
  "description": "A centralized, auto-updating database containing metadata for key project files.",
  "type": "object",
  "patternProperties": {
    "^[^\\s]+$": {
      "type": "object",
      "properties": {
        "purpose_and_responsibility": {
          "type": "string",
          "description": "Describes the file's main purpose and responsibility."
        },
        "usage_context": {
          "type": "string",
          "description": "For protocols: describes when and why it should be activated or requested. For other files: describes its role in the architecture."
        },
        "last_updated_by_session": {
          "type": "string",
          "description": "The ID of the session that last updated this metadata."
        },
        "last_updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "The ISO 8601 timestamp of the last update."
        },
        "last_commit_sha": {
          "type": "string",
          "description": "The full Git commit SHA that triggered this metadata update."
        }
      },
      "required": [
        "purpose_and_responsibility",
        "usage_context",
        "last_updated_by_session",
        "last_updated_at",
        "last_commit_sha"
      ]
    }
  }
}
