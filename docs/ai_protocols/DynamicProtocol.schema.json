// docs/ai_protocols/DynamicProtocol.schema.json
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Master Schema for Dynamic AI Protocols",
  "description": "Defines the mandatory structure for any dynamic protocol object before it can be proposed or integrated.",
  "type": "object",
  "required": [
    "protocolId",
    "description",
    "status",
    "trigger",
    "steps",
    "schema"
  ],
  "properties": {
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol, e.g., 'DP-STATURE-REPORT-01'.",
      "pattern": "^DP-[A-Z0-9_-]+-\\d{2}$"
    },
    "description": {
      "type": "string",
      "description": "A human-readable explanation of the protocol's purpose.",
      "minLength": 10
    },
    "status": {
      "description": "The current lifecycle state of the protocol.",
      "enum": ["experimental", "active", "deprecated"]
    },
    "trigger": {
      "type": "object",
      "required": ["event"],
      "properties": {
        "event": {
          "type": "string",
          "description": "The event that activates this protocol, e.g., 'new_session_start'."
        },
        "conditions": {
          "type": "array",
          "items": { "type": "object" }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action", "details"],
        "properties": {
          "action": { "type": "string" },
          "details": { "type": "object" }
        }
      }
    },
    "schema": {
      "type": "object",
      "description": "A self-validating JSON Schema that this protocol instance must adhere to.",
      "minProperties": 1
    }
  }
}
