    "fallback_rules": [
      {
        "conditions": {
          "path_contains": "/schemas/",
          "extension": ".json"
        },
        "classification": "SCHEMA_DEFINITION"
      },
      {
        "conditions": {
          "filename_ends_with": "_Protocol.md"
        },
        "classification": "OPERATIONAL_PROTOCOL"
      },
      {
        "conditions": {
          "filename_ends_with": "_Protokoll.md"
        },
        "classification": "OPERATIONAL_PROTOCOL"
      },
      {
        "conditions": {
          "path_contains": "docs/ai_protocols/",
